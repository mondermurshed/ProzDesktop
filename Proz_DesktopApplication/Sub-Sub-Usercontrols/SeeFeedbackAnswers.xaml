<UserControl x:Class="Proz_DesktopApplication.Sub_Sub_Usercontrols.SeeFeedbackAnswers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_Sub_Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="DataGridCell">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />

        </Style>
    </UserControl.Resources>




    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <DataGrid x:Name="FeedbacksDatagrid" Margin="20,40,20,20" AlternationCount="1000000" SelectionUnit="FullRow" FocusVisualStyle="{x:Null}" 
        AutoGenerateColumns="False"
               IsReadOnly="True"
            
               SelectionMode="Single"
              >

                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="#" Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=DataGridRow}, Path=AlternationIndex}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Date/Time Creation" Binding="{Binding Date}" />
                   

                </DataGrid.Columns>

            </DataGrid>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Get" Margin="0,0,10,0" />
                <Button Content="Reload"  />
               
               

            </StackPanel>
        </Grid>
        <Grid Margin="20,30,20,20" Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="ID" FontWeight="ExtraBold" FontSize="13" Margin="0,0,0,5"/>
                    <TextBox IsReadOnly="True" FontWeight="Medium" FontSize="13" Margin="0,0,0,20"/>
                    <TextBlock Text="Answer" FontWeight="ExtraBold" FontSize="13" Margin="0,0,0,5"/>
                    <TextBox IsReadOnly="True" FontWeight="Medium" FontSize="13" Margin="0,0,0,20"/>
                    <TextBlock Margin="0,10,0,5" FontWeight="ExtraBold" FontSize="13" Text="The Replier"/>
                    <TextBox IsReadOnly="True" FontWeight="Medium" FontSize="13" Margin="0,0,0,20"/>






                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
