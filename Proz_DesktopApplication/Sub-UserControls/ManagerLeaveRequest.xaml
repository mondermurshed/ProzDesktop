<UserControl x:Class="Proz_DesktopApplication.Sub_UserControls.ManagerLeaveRequest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
               xmlns:sub_subUsercontrols ="clr-namespace:Proz_DesktopApplication.Sub_Sub_Usercontrols"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20,30,20,20">
        <mah:MetroAnimatedTabControl mah:HeaderedControlHelper.HeaderFontFamily="Microsoft YaHei UI" mah:TabControlHelper.Underlined="SelectedTabItem" mah:TabControlHelper.UnderlinePlacement="Left"   >
            <!-- TAB 1 -->
            <TabItem Header="Request A New Leave Request">
                <sub_subUsercontrols:AddaALeaveRequest/>
            </TabItem>

            <!-- TAB 2 -->
            <TabItem Header="Manage My Leave Requests">
                <sub_subUsercontrols:ManageMyLeaveRequestsManager/>
            </TabItem>
            <TabItem Header="List Of My Completed Requests">
                <sub_subUsercontrols:CompletedLeaveRequestListManager/>
            </TabItem>


        </mah:MetroAnimatedTabControl>
    </Border>
</UserControl>
