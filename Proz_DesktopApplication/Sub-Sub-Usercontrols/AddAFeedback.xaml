<UserControl x:Class="Proz_DesktopApplication.Sub_Sub_Usercontrols.AddAFeedback"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
             xmlns:materialDesignControls="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_Sub_Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5,40,5,5">
    
        <ScrollViewer  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="30">
            <StackPanel>

           



                <TextBlock  Style="{StaticResource MyTextBlockStyle}" Text="Title" FontWeight="ExtraBold" />
            <TextBox Style="{StaticResource MyTextBoxStyle}" Margin="0,0,0,20" MaxLength="80" TextWrapping="Wrap"/>
                <TextBlock Style="{StaticResource MyTextBlockStyle}" Text="Feedback type" FontWeight="ExtraBold"/>
            <ComboBox Margin="0,0,0,50"/>
                <TextBlock Style="{StaticResource MyTextBlockStyle}" Text="Description" FontWeight="ExtraBold"  Margin="0,0,0,5"/>
                <TextBox Style="{StaticResource MyTextBoxStyle}"
     AcceptsReturn="True"
     TextWrapping="Wrap"
     MaxLength="1500"
     VerticalContentAlignment="Top"
     HorizontalContentAlignment="Left"
     VerticalAlignment="Top"
     HorizontalAlignment="Stretch"
     Margin="0,0,0,70"/>
                <Button Style="{StaticResource MyButtonStyle}" HorizontalAlignment="Stretch" Content="Send Feedback!" Click="Button_Click" />
      
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
