<base:BaseUserControlMain x:Class="Proz_DesktopApplication.Sub_UserControls.DepartmentCreationUsercontrol"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:base="clr-namespace:Proz_DesktopApplication"
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Margin="20,30,20,20">
        <mah:MetroAnimatedSingleRowTabControl>
            <!-- ✅ TAB 1: Create Department -->
            <TabItem Header="Create New Department">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <StackPanel Margin="20"   HorizontalAlignment="Center" >
                        <TextBlock Style="{StaticResource MyTextBlockStyle}" Text="Department Name:" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource MyTextBoxStyle}" x:Name="DepartmentNameTextBox" Margin="0,0,0,15" TextWrapping="Wrap" MaxLength="100"/>
                        <TextBlock Style="{StaticResource MyTextBlockStyle}" Text="Search Department Manager Name:" Margin="0,0,0,5"/>
                        <TextBox IsEnabled="False" x:Name="SearchByNmaeDepartmentmanagerTextbox" Style="{StaticResource MyTextBoxStyle}" Margin="0,0,0,15" TextWrapping="Wrap" MaxLength="100" TextChanged="SearchDepartmentmanagerbyname"/>
                        <DataGrid x:Name="DepartmentManagersDatagrid"
       
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         CanUserAddRows="False"
                         Margin="0,10,0,0"
                         SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Manager Full name" Binding="{Binding FullName}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>

                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="1">
                        <Button Margin="0,0,20,0"  Padding="20,15,20,15" Style="{StaticResource MyButtonStyle}" Content="Refresh" Click="RefreshManagersAddDepartementSection"/>
                    <Button Padding="20,15,20,15" Style="{StaticResource MyButtonStyle}" Content="Create the Department" Click="CreateDepartmentButton_Click"/>
                    </StackPanel>
                   

                </Grid>
             
            </TabItem>

            <!-- ✅ TAB 2: View Departments With Manager -->
            <TabItem Header="View Departments with Manager">
                
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Content="Refresh" Style="{StaticResource MyButtonStyle}" HorizontalAlignment="Right" Padding="20,7,20,7" Margin="0,5,0,10" Click="refreshdepartmentwithmanagersdatagrid"/>
                    <DataGrid x:Name="DepartmentsWithManagerDataGrid" Grid.Row="1"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Department Name" Binding="{Binding DepartmentName}" Width="*"/>
                            <DataGridTextColumn Header="Manager Name" Binding="{Binding ManagerName}" Width="*"/>
                            <DataGridTemplateColumn Header="Action" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Unassign Admin" Click="UnassignManagerButton_Click" Foreground="IndianRed"/>
                                    </DataTemplate>
                                    
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Action" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Delete Department" Click="DeleteDepartment"  Background="#FF922323"/>
                                    </DataTemplate>

                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ✅ TAB 3: Departments Without Manager -->
            <TabItem Header="Assign Manager to Department">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="DepartmentsWithoutManagerDataGrid"
                              Grid.Row="0"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Department Name" Binding="{Binding DepartmentName}" Width="*"/>
                         
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="DepartmentManagersDatagridthirdtab" Grid.Row="1"
                          
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Margin="0,10,0,0"
                      SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Manager Full name" Binding="{Binding FullName}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Margin="0,10,20,5"   Style="{StaticResource MyButtonStyle}" Content="Refresh Data" HorizontalAlignment="Right" Click="RefreshInTab3"/>
                        <Button Grid.Column="1" Margin="20,10,0,5"   Style="{StaticResource MyButtonStyle}" Content="Assign Manager" HorizontalAlignment="Left" Click="AssignManagerButton_Click"/>
                    </Grid>
                  
                </Grid>
            </TabItem>
        </mah:MetroAnimatedSingleRowTabControl>
    </Border>
</base:BaseUserControlMain>
