             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sub_subUsercontrols ="clr-namespace:Proz_DesktopApplication.Sub_Sub_Sub_Usercontrols"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_Sub_Usercontrols"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20,30,20,10">
        <mah:MetroAnimatedTabControl mah:HeaderedControlHelper.HeaderFontFamily="Microsoft YaHei UI" mah:TabControlHelper.Underlined="SelectedTabItem" mah:TabControlHelper.UnderlinePlacement="Left">
            <!-- TAB 1 -->
            <TabItem Header="Manage Managers Leave Requests">
                <sub_subUsercontrols:ViewManagersLeaveRequestsHRManager/>
            </TabItem>

            <!-- TAB 2 -->
            <TabItem Header="Completed Leave Requests">
                <sub_subUsercontrols:AnsweredDepartmentManagersLeaveRequestsByTheHRManager/>
            </TabItem>



        </mah:MetroAnimatedTabControl>
    </Border>
