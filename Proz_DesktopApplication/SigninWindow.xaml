<mah:MetroWindow x:Class="Proz_DesktopApplication.SigninWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:Proz_DesktopApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" WindowStartupLocation="CenterScreen" TitleBarHeight="60" GlowBrush="DeepSkyBlue" BorderThickness="1.5"    ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow"
              
               
        Opacity="1" Loaded="MetroWindow_Loaded">

    <Border BorderThickness="2"  Margin="30" Padding="10">
      

        <Grid  >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="Email address" Margin="0,0,0,15"/>
                <TextBox x:Name="emailTextbox" PreviewKeyDown="EmailTextbox_PreviewKeyDown" PreviewTextInput="EmailTextbox_PreviewTextInput"/>
                <TextBlock x:Name="email_textblock" Margin="0,0,0,30"/>
            <TextBlock Text="Password" Margin="0,0,0,15"/>
                <PasswordBox x:Name="passwordbox" PreviewKeyDown="Passwordtextbox_PreviewKeyDown" PreviewTextInput="Passwordtextbox_PreviewTextInput"/>
                <TextBlock x:Name="passwordtextblock" Margin="0,0,0,20"/>
          



        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
                <Button x:Name="loginbutton" Margin="0,0,20,0" Click="loginbutton_Click" >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <iconPacks:PackIconFontAwesome Kind="ArrowUpSolid" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock Text="Login" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="registerbutton"  Grid.Column="1" Click="registerbutton_Click">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <iconPacks:PackIconFontAwesome Kind="ArrowRightSolid" Width="16" Height="16" Margin="0,0,5,0" />
                        <TextBlock Text="OR CREATE &#x0a; AN ACCOUNT" VerticalAlignment="Center" FontSize="10"/>
                    </StackPanel>
                </Button>
        </Grid>
           
        </Grid>
    </Border>
</mah:MetroWindow>
