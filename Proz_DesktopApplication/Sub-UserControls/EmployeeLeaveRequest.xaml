<UserControl x:Class="Proz_DesktopApplication.Sub_UserControls.EmployeeLeaveRequest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
              xmlns:sub_subUsercontrols ="clr-namespace:Proz_DesktopApplication.Sub_Sub_Usercontrols"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20,30,20,20">
        <TabControl>
            <!-- TAB 1 -->
            <TabItem Header="Request A New Leave Request">
                <sub_subUsercontrols:AddaALeaveRequest/>
            </TabItem>

            <!-- TAB 2 -->
            <TabItem Header="Manage My Leave Requests">
                <sub_subUsercontrols:ManageMyLeaveReqests/>
            </TabItem>
            <TabItem Header="Get Answers About My Requests">
                <sub_subUsercontrols:AnswersToMyLeaveRequests/>
            </TabItem>


        </TabControl>
    </Border>
</UserControl>
