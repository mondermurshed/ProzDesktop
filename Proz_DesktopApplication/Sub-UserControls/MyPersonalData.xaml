<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proz_DesktopApplication.Sub_UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Proz_DesktopApplication.Sub_UserControls.MyPersonalData"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Margin="20,30,20,20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <materialDesign:Card Grid.Row="0" UniformCornerRadius="20" Margin="5,20,5,5">
                <Border CornerRadius="20" Margin="7" HorizontalAlignment="Center">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">


                        <StackPanel >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="First Name :" Margin="0,0,5,0"/>
                                <TextBlock Text="Monder"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Last Name :" Margin="0,0,5,0"/>
                                <TextBlock Text="Murshed"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Age :" Margin="0,0,5,0"/>
                                <TextBlock Text="21"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Date of birth :" Margin="0,0,5,0"/>
                                <TextBlock Text="2003/9/14"/>
                            </StackPanel>
                        </StackPanel>

                    </ScrollViewer>
                </Border>
            </materialDesign:Card>

        </Grid>
  

    </Border>
</UserControl>
